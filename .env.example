# Environment Variables Example
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# Database Configuration
# For Render: This will be auto-set from PostgreSQL database
# For Local Development: postgresql://user:password@localhost:5432/city_data_manager
DATABASE_URL=postgresql://user:password@localhost:5432/city_data_manager

# Session Secret
# Generate a random string for production
# For Render: This will be auto-generated
SESSION_SECRET=your-random-secret-key-change-this-in-production

# Environment
# Set to 'production' for Render deployment
# Set to 'development' for local development
NODE_ENV=development

# Port
# Render uses port 10000 by default
# Local development uses 3000
PORT=3000

# Optional: Logging Level
LOG_LEVEL=info

# Optional: Session Timeout (in milliseconds)
# Default: 24 hours (86400000 ms)
SESSION_TIMEOUT=86400000
